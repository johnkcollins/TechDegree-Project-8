extends layout.pug

block content
    div
        h1 Books
            p
                a(class="button" href="books/new") Create New Book
        table
            thead
            tr
                th Title
                th Author
                th Genre
                th Year
            tbody
                each book in books
                    tr
                        td
                            a(href=`/books/${book.id - 1}` id=`${book.id - 1}` book=`${book}`)= `${book.title}`
                        td=`${book.author}`
                        td=`${book.genre}`
                        td=`${book.year}`
