extends layout

block content
    head
        title New Book

    body
        h1 New Book
        form(method="post" action="/books/new")

            if messages
                h2.error Please verify Title and Author have a value
                ul.error
                    each message in messages
                        li= message

            p
                label( for="title") Title
                input( name="title" type="text" id="title" autofocus)

            p
                label( for="author") Author
                input( name="author" type="text" id="author")

            p
                label( for="genre") Genre
                input( name="genre" type="text" id="genre")

            p
                label( for="year") Year
                input( name="year" type="text" id="year")

            p
                input( type="submit" value="Create New Book")

            p
                a(class="button" href="/") Cancel
