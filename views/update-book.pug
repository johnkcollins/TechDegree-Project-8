extends layout



block content

    -let book = books[id-1]
    -let title = book.title
    -let author = book.author
    -let genre = book.genre
    -let year = book.year

    body
        h1 Update Book
    form(method="post" action=`/books/${id}` onsubmit="return")

        if messages
            ul.error
                each message in messages
                    li= message

        p
            label( for="title") Title
            input( name="title" type="text" id="title" value=title autofocus)
        p
            label( for="author") Author
            input( name="author" type="text" id="author" value=author)
        p
            label( for="genre") Genre
            input( name="genre" type="text" id="genre" value=genre)
        p
            label( for="year") Year
            input( name="year" type="text" id="year" value=year)
        p
            input(type="submit" value="Update Book" name="Update")
    form(method='post', action=`/books/${book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a(class="button" href="/") Cancel
        p
            input(type="submit" value="Delete Book" name="delete")